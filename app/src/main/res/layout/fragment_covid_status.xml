<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:background="@drawable/img"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CovidStatusFragment">

        <!-- TODO: Update blank fragment layout -->
        <ImageView
            android:id="@+id/flagIV"
            android:layout_marginTop="40dp"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/countryTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="Bangladesh" />

        <TextView
            android:textColor="@color/black"
            android:background="#97EA9A"
            android:id="@+id/updateTimeTV"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Updated" />

        <ScrollView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="#55FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="8dp"
                app:contentPadding="6dp">

                <LinearLayout
                    android:background="#55FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="@color/white"
                        android:background="#FBC02D"
                        android:textAlignment="center"
                        android:layout_margin="5dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="Case Today" />
                    <TextView
                        android:textColor="@color/black"
                        android:layout_margin="15dp"
                        android:id="@+id/caseTodayTV"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:text="Bangladesh" />
                    <TextView
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:background="#FFA000"
                        android:layout_margin="5dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="Total Cases" />
                    <TextView
                        android:textColor="@color/black"
                        android:layout_margin="15dp"
                        android:id="@+id/totalcaseTV"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:background="#F46F6F"
                        android:layout_margin="5dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="Death Today" />
                    <TextView
                        android:textColor="#E85757"
                        android:layout_margin="15dp"
                        android:id="@+id/deathTodayTV"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:text="Bangladesh" />
                    <TextView
                        android:background="#E64A19"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_margin="5dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="Total Death" />
                    <TextView
                        android:textColor="#F15555"
                        android:layout_margin="15dp"
                        android:id="@+id/totaldeathTV"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        />



                    <TextView
                        android:background="#689F38"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_margin="5dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="Recover Today" />
                    <TextView
                        android:textColor="#388E3C"
                        android:layout_margin="15dp"
                        android:id="@+id/recoverTodayTV"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:text="Bangladesh" />
                    <TextView
                        android:background="#388E3C"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_margin="5dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="Total Recovered" />
                    <TextView
                        android:textColor="#388E3C"
                        android:layout_margin="15dp"
                        android:id="@+id/totalrecoverTodayTV"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:text="Bangladesh" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </ScrollView>

    </LinearLayout>
</layout>